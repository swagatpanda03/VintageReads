<%- include('partials/header'); -%>
    <div class="sellersignup">          
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active"><a href="/contact">Contact Us</a></li>
            </ol>
          </nav>
        <h3>Contact Us</h3>

        <% if (submitted == 1) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Query Submitted</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
        <% } %>

        <div class="contact_form">
            <form id="form" action='/contact' method="post" style="box-sizing: border-box;">
                <div style="display: flex">
                    <div style="flex: 50%; padding: 15px;height:100px">
                        <label for="name">Name:</label>
                        <input type="text" id="name" name="name" required>

                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required>

                        <label class="form-label" for="textAreaExample">Query</label>
                        <textarea class="form-control" style="resize: none;" name="query" id="query" rows="4"></textarea>
                        <div style="text-align: center;">
                            <br><button type="submit">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <%- include('partials/footer'); -%>